entity = {
    name = "crystal_planet_01_entity"
    pdxmesh = "planet_clouded_mesh"

    meshsettings = {
        name = "planet_geosphereShape"
        texture_diffuse = "crystal_01_green_diffuse.dds"
        texture_normal = "crystal_01_normal.dds"
        texture_specular = "crystal_01_spec.dds"
    }

    ##cloud texture override
    meshsettings = {
        name = "clouds_geosphereShape"
        texture_diffuse = "crystal_clouds_green_diffuse.dds"
        texture_normal = "crystal_clouds_normal.dds"
        texture_specular = "crystal_clouds_specular.dds"
    }

    ##cloud shadow texture override
    meshsettings = {
        name = "clouds_shadow_geosphereShape"
        texture_diffuse = "crystal_cloud_shadow_diffuse.dds"
        texture_normal = "nonormal.dds"
        texture_specular = "nospec.dds"
    }

    default_state = "idle"
    state = { name = "idle" animation = "idle" time_offset = { 0 100 }
        start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
    }
}

